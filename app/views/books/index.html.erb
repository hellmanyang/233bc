<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>《<%= link_to book.name, book %>》</td>
            <td><%= book.user.name %></td>
            <% if can? :manage, Book %>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if can? :manage, Book %>
      <p><%= link_to "创建新书", new_book_path, {class: 'btn btn-primary'} %></p>
    <% end %>
  </div>
  
</div>
