<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>《<%= link_to book.name, book %>》</td>
            <td><%= book.user.name %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <p><%= link_to '添加新书', new_book_path %></p>
  </div>
  
</div>
