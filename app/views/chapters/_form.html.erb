<div class="row">
  <div class="col-md-6">
    <%= form_for @chapter do |f| %>
    
      <div class="form-group">
        <%= f.label '标题' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label '内容' %> <br>
        <%= f.text_area :content, class: 'form-control text_area' %>
      </div>
      
      <br>
      
      <div class="actions">
        <%= f.submit('提交') %>
      </div>
    <% end %>
    
  </div>
  
  <div class="col-md-6"> </div>
</div>