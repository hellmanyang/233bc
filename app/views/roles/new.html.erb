<div class="row">
  <div class="col-md-6">
    <%= form_tag("/roles", method: "post") do %>
      <table class="table">
        <tr>
          <td><%= label_tag(:token, "授权口令") %></td>
          <td><%= text_field_tag(:token) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:email, "用户电邮") %></td>
          <td><%= text_field_tag(:email) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:role, "角色选择") %></td>
          <td>
            <select name="role" id="role">
              <option value="user">user</option>
              <option value="vip">vip</option>
              <option value="admin">admin</option>
            </select>
          </td>
        </tr>
      </table>
      
      
      
      
      <%= submit_tag("提交") %>
    <% end %>
  </div>
  <div class="col-md-6"></div>
</div>